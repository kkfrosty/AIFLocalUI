<Window x:Class="AiFoundryUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AiFoundryUI"
        mc:Ignorable="d"
        Title="AI Foundry Local - .NET UI" Height="700" Width="1100">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top toolbar -->
        <DockPanel Grid.Row="0" Margin="8">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" Margin="0,0,12,0">
                <Button x:Name="BtnStart" Content="Start Service" Width="120" Margin="0,0,6,0" Click="BtnStart_Click"/>
                <Button x:Name="BtnStop" Content="Stop Service" Width="120" Margin="0,0,6,0" Click="BtnStop_Click"/>
                <Button x:Name="BtnRefreshModels" Content="Refresh Models" Width="130" Margin="0,0,6,0" Click="BtnRefreshModels_Click"/>
                <Button x:Name="BtnOpenConfig" Content="Open Config" Width="110" Margin="0,0,6,0" Click="BtnOpenConfig_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                <TextBlock Text="Model:" VerticalAlignment="Center" Margin="6,0"/>
                <ComboBox x:Name="CmbModels" Width="260" Margin="6,0" />
                <Button x:Name="BtnSelectModel" Content="Select" Width="80" Margin="6,0" Click="BtnSelectModel_Click"/>
                <TextBlock Text="Temp:" VerticalAlignment="Center" Margin="16,0,4,0"/>
                <Slider x:Name="SldTemp" Minimum="0" Maximum="1" Value="0.7" Width="140"/>
            </StackPanel>

            <TextBlock x:Name="TxtStatus" Text="Idle" Foreground="Gray" HorizontalAlignment="Right" DockPanel.Dock="Right" VerticalAlignment="Center"/>
        </DockPanel>

        <!-- Main split -->
        <Grid Grid.Row="1" Margin="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Chat panel -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="0" Margin="0,0,8,8">
                    <TextBlock x:Name="TxtChat" TextWrapping="Wrap" FontFamily="Consolas" />
                </ScrollViewer>

                <DockPanel Grid.Row="1">
                    <TextBox x:Name="TxtPrompt" AcceptsReturn="True" Height="90" VerticalScrollBarVisibility="Auto" DockPanel.Dock="Left" TextWrapping="Wrap" />
                    <Button x:Name="BtnSend" Content="Send" Width="90" Margin="8,0,0,0" Click="BtnSend_Click"/>
                </DockPanel>
            </Grid>

            <!-- Logs panel -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="Service Logs" FontWeight="Bold" Margin="0,0,0,6"/>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <TextBox x:Name="TxtLogs" FontFamily="Consolas" IsReadOnly="True" AcceptsReturn="True" TextWrapping="Wrap"/>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Status bar with system metrics -->
        <StatusBar Grid.Row="2">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="CPU:" Margin="0,0,4,0"/>
                    <ProgressBar x:Name="PbCpu" Width="120" Height="14" Minimum="0" Maximum="100"/>
                    <TextBlock x:Name="LblCpu" Margin="6,0,12,0"/>
                    <TextBlock Text="Mem:" Margin="0,0,4,0"/>
                    <ProgressBar x:Name="PbMem" Width="120" Height="14" Minimum="0" Maximum="100"/>
                    <TextBlock x:Name="LblMem" Margin="6,0,12,0"/>
                    <TextBlock Text="Disk:" Margin="0,0,4,0"/>
                    <ProgressBar x:Name="PbDisk" Width="120" Height="14" Minimum="0" Maximum="100"/>
                    <TextBlock x:Name="LblDisk" Margin="6,0,12,0"/>
                    <TextBlock Text="GPU:" Margin="0,0,4,0"/>
                    <ProgressBar x:Name="PbGpu" Width="120" Height="14" Minimum="0" Maximum="100"/>
                    <TextBlock x:Name="LblGpu" Margin="6,0,12,0"/>
                </StackPanel>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="LblHealth" Foreground="Gray" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
    
</Window>
