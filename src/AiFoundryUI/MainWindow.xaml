<Window x:Class="AiFoundryUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AiFoundryUI"
        mc:Ignorable="d"
        Title="AI Foundry Local" Height="800" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid Background="#F8F9FA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="ThreadPaneColumn" Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Enhanced top bar with service management -->
        <Border Grid.Row="0" Grid.ColumnSpan="2" Background="White" BorderBrush="#E1E5E9" BorderThickness="0,0,0,1" Padding="20,12">
            <DockPanel>
                <!-- Left: App branding -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <TextBlock Text="🤖" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="AI Foundry Local" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>
                
                <!-- Right: Settings and refresh -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <Button x:Name="BtnRefreshModels" Content="⟳" ToolTip="Refresh Models" Width="32" Height="32" Margin="0,0,8,0" Click="BtnRefreshModels_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                    <Button x:Name="BtnOpenConfig" Content="⚙" ToolTip="Settings" Width="32" Height="32" Click="BtnOpenConfig_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                </StackPanel>
                
                <!-- Center: Service Status and Controls -->
                <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Service status indicator -->
                    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,4">
                        <Ellipse x:Name="ServiceStatusIndicator" Width="8" Height="8" Fill="#EF4444" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock x:Name="TxtServiceStatus" Text="Service Stopped" FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,12,0"/>
                        <TextBlock x:Name="TxtCurrentModel" Text="" Foreground="#6B7280" FontStyle="Italic" VerticalAlignment="Center"/>
                    </StackPanel>
                    
                    <!-- Service URL -->
                    <TextBlock Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" x:Name="TxtServiceUrl" Text="" Foreground="#3B82F6" FontSize="12" HorizontalAlignment="Center" Margin="0,2,0,8"/>
                    
                    <!-- Service control buttons -->
                    <Button Grid.Row="2" Grid.Column="0" x:Name="BtnStartService" Content="Start Service" Background="#10B981" Foreground="White" BorderThickness="0" Padding="12,4" Margin="0,0,4,0" FontSize="11" Click="BtnStartService_Click"/>
                    <Button Grid.Row="2" Grid.Column="1" x:Name="BtnStopService" Content="Stop Service" Background="#EF4444" Foreground="White" BorderThickness="0" Padding="12,4" Margin="4,0,4,0" FontSize="11" Click="BtnStopService_Click" Visibility="Collapsed"/>
                    <Button Grid.Row="2" Grid.Column="2" x:Name="BtnRestartService" Content="Restart" Background="#F59E0B" Foreground="White" BorderThickness="0" Padding="12,4" Margin="4,0,0,0" FontSize="11" Click="BtnRestartService_Click" Visibility="Collapsed"/>
                </Grid>
            </DockPanel>
        </Border>

        <!-- Thread / History Pane -->
        <Grid Grid.Row="1" Grid.Column="0" Grid.RowSpan="3">
            <!-- Expanded pane -->
            <Border x:Name="ExpandedThreadPane" Background="#FFFFFF" BorderBrush="#E1E5E9" BorderThickness="0,0,1,0">
                <DockPanel>
                    <!-- Header with image + collapse toggle -->
                    <Border DockPanel.Dock="Top" Background="#F3F4F6" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="12,10" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel x:Name="ThreadHeaderContent" Orientation="Horizontal" Grid.Column="0">
                                <TextBlock Text="🧵" FontSize="20" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock Text="Threads" FontWeight="SemiBold" VerticalAlignment="Center" FontSize="14"/>
                            </StackPanel>
                            <Button x:Name="BtnToggleThreadPane" Grid.Column="1" Content="⮜" Width="28" Height="28" Click="BtnToggleThreadPane_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                        </Grid>
                    </Border>
                    <StackPanel x:Name="NewThreadPanel" DockPanel.Dock="Top" Orientation="Vertical" Margin="12" >
                        <Button x:Name="BtnNewThread" Content="＋ New Chat" Padding="10,6" Margin="0,0,0,12" Background="#3B82F6" Foreground="White" BorderThickness="0" Click="BtnNewThread_Click"/>
                    </StackPanel>
                    <ListBox x:Name="LstThreads" Margin="8,0,8,8" SelectionChanged="LstThreads_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="{Binding Title}" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                    <!-- Thread instructions icon with badge -->
                                    <Grid Grid.Column="1" Margin="6,0,0,0" Width="24" Height="24">
                                        <Button x:Name="BtnThreadInstructions"
                                                Content="🧭"
                                                ToolTip="Edit thread instructions"
                                                Width="24" Height="24"
                                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                                Click="BtnThreadInstructions_Click"/>
                                        <Ellipse Width="6" Height="6" Fill="#10B981" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0" Visibility="Visible">
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Visibility" Value="Visible"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding ThreadInstructions}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                    </Grid>
                                    <Button Grid.Column="2"
                                            Content="🗑"
                                            ToolTip="Delete thread"
                                            Width="24" Height="24"
                                            Margin="6,0,0,0"
                                            Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
                                            Click="BtnDeleteThread_Click"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </DockPanel>
            </Border>
            <!-- Collapsed mini pane -->
            <Border x:Name="CollapsedThreadPane" Background="#FFFFFF" BorderBrush="#E1E5E9" BorderThickness="0,0,1,0" Width="56" Visibility="Collapsed">
                <StackPanel>
                    <Button x:Name="BtnExpandThreadPane" Content="🤖" Margin="4" Padding="4" Click="BtnToggleThreadPane_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                    <Button x:Name="BtnNewThreadCollapsed" Content="📝" Margin="4,8,4,0" Padding="4" ToolTip="New Chat" Click="BtnNewThread_Click" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main chat area -->
        <Grid Grid.Row="1" Grid.Column="1" Margin="0">
            <ScrollViewer x:Name="ChatScrollViewer" VerticalScrollBarVisibility="Auto" Padding="20" Background="White">
                <StackPanel x:Name="ChatMessages" />
            </ScrollViewer>
            
            <!-- Welcome/empty state -->
            <StackPanel x:Name="WelcomePanel" VerticalAlignment="Center" HorizontalAlignment="Center" Visibility="Visible">
                <TextBlock Text="Welcome" FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,8"/>
                <TextBlock Text="Select a model below to start chatting" Foreground="#6B7280" HorizontalAlignment="Center"/>
            </StackPanel>
        </Grid>

    <!-- Chat input area -->
    <Border Grid.Row="2" Grid.Column="1" Background="White" BorderBrush="#E1E5E9" BorderThickness="0,1,0,0" Padding="20,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <Border Grid.Column="0" Background="#F9FAFB" BorderBrush="#D1D5DB" BorderThickness="1" CornerRadius="8" Padding="12">
            <DockPanel LastChildFill="True">
            <!-- Instructions icon -->
            <Button x:Name="BtnEditThreadInstructions"
                DockPanel.Dock="Left"
                Content="🧭"
                ToolTip="Add Thread Instructions"
                Width="28" Height="28"
                Margin="0,0,8,0"
                Click="BtnEditThreadInstructions_Click"
                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
            <!-- Use default toggle, only shown when thread instructions exist -->
            <CheckBox x:Name="ChkUseDefaultInstructions"
                  DockPanel.Dock="Left"
                  Content="Use Default"
                  Margin="0,0,8,0"
                  VerticalAlignment="Center"
                  Visibility="Collapsed"
                  IsChecked="True"/>
            <!-- Prompt input -->
            <TextBox x:Name="TxtPrompt" 
                 Background="Transparent" 
                 BorderThickness="0" 
                 TextWrapping="Wrap" 
                 AcceptsReturn="True"
                 MaxHeight="120"
                 VerticalScrollBarVisibility="Auto"
                 Text="Type your message here..." 
                 Foreground="#9CA3AF"
                 GotFocus="TxtPrompt_GotFocus"
                 LostFocus="TxtPrompt_LostFocus"
                 KeyDown="TxtPrompt_KeyDown"/>
            </DockPanel>
                </Border>
                
                <Button x:Name="BtnSend" 
                        Grid.Column="1" 
                        Content="Send" 
                        Background="#3B82F6" 
                        Foreground="White" 
                        BorderThickness="0" 
                        Padding="20,12" 
                        Margin="12,0,0,0" 
                        FontWeight="Medium"
                        Click="BtnSend_Click"/>
            </Grid>
        </Border>

        <!-- Collapsible inline editor for Thread Instructions -->
        <Border Grid.Row="2" Grid.Column="1" Background="#FFFFFF" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Padding="20,0" Margin="0,80,0,0">
            <StackPanel>
                <StackPanel x:Name="ThreadInstructionsPanel" Visibility="Collapsed" Background="#F9FAFB" Margin="0,8,0,0" Orientation="Vertical">
                    <Border Padding="12" Background="Transparent">
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="Thread Instructions" FontWeight="SemiBold" Margin="0,0,0,6"/>
                            <TextBox x:Name="TxtThreadInstructions" TextWrapping="Wrap" AcceptsReturn="True" Height="80"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                                <Button x:Name="BtnSaveThreadInstructions" Content="Save" Margin="0,0,8,0" Padding="12,4" Click="BtnSaveThreadInstructions_Click"/>
                                <Button x:Name="BtnCloseThreadInstructions" Content="Close" Padding="12,4" Click="BtnCloseThreadInstructions_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Model management section (separate from service) -->
    <Border Grid.Row="3" Grid.Column="1" Background="#F8F9FA" BorderBrush="#E1E5E9" BorderThickness="0,1,0,0" Padding="20,16">
            <StackPanel>
                <!-- Model controls row -->
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                    <TextBlock Text="Model:" FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <ComboBox x:Name="CmbModels" 
                              Width="280" 
                              Margin="0,0,16,0" 
                              Padding="8,6"
                              SelectionChanged="CmbModels_SelectionChanged"/>
                    
                    <!-- Model Load/Unload buttons -->
                    <!-- Load/Unload buttons hidden; model management now automatic -->
                    <Button x:Name="BtnLoadModel" Visibility="Collapsed"/>
                    <Button x:Name="BtnUnloadModel" Visibility="Collapsed"/>
                    
                    <!-- Temperature control -->
                    <StackPanel Orientation="Horizontal" Margin="16,0,0,0">
                        <TextBlock Text="Temperature:" VerticalAlignment="Center" Margin="0,0,8,0" FontSize="12" Foreground="#6B7280"/>
                        <Slider x:Name="SldTemp" 
                                Minimum="0" 
                                Maximum="1" 
                                Value="0.7" 
                                Width="100" 
                                VerticalAlignment="Center"/>
                        <TextBlock x:Name="LblTemp" 
                                   Text="0.7" 
                                   VerticalAlignment="Center" 
                                   Margin="8,0,0,0" 
                                   FontSize="12" 
                                   Foreground="#6B7280"
                                   Width="30"/>
                    </StackPanel>
                </StackPanel>
                
                <!-- Progress/Status row for model operations -->
                <StackPanel x:Name="ProgressPanel" Orientation="Horizontal" VerticalAlignment="Center" Visibility="Collapsed">
                    <TextBlock x:Name="LblProgressStatus" 
                               Text="Loading model..." 
                               FontSize="13" 
                               Foreground="#6B7280" 
                               VerticalAlignment="Center" 
                               Margin="0,0,12,0"/>
                    <ProgressBar x:Name="PbProgress" 
                                 Width="200" 
                                 Height="6" 
                                 Minimum="0" 
                                 Maximum="100" 
                                 VerticalAlignment="Center"
                                 Margin="0,0,8,0"/>
                    <TextBlock x:Name="LblProgressPercent" 
                               Text="" 
                               FontSize="12" 
                               Foreground="#6B7280" 
                               VerticalAlignment="Center" 
                               Width="40"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- System metrics status bar -->
    <StatusBar Grid.Row="4" Grid.ColumnSpan="2" Background="#F8F9FA" BorderBrush="#E1E5E9" BorderThickness="0,1,0,0" Padding="20,8">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                        <TextBlock Text="CPU" Margin="0,0,6,0" FontSize="11" Foreground="#6B7280"/>
                        <ProgressBar x:Name="PbCpu" Width="60" Height="8" Minimum="0" Maximum="100"/>
                        <TextBlock x:Name="LblCpu" Margin="6,0,0,0" FontSize="11" Foreground="#6B7280" Width="35"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                        <TextBlock Text="Memory" Margin="0,0,6,0" FontSize="11" Foreground="#6B7280"/>
                        <ProgressBar x:Name="PbMem" Width="60" Height="8" Minimum="0" Maximum="100"/>
                        <TextBlock x:Name="LblMem" Margin="6,0,0,0" FontSize="11" Foreground="#6B7280" Width="35"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,24,0">
                        <TextBlock Text="Disk" Margin="0,0,6,0" FontSize="11" Foreground="#6B7280"/>
                        <ProgressBar x:Name="PbDisk" Width="60" Height="8" Minimum="0" Maximum="100"/>
                        <TextBlock x:Name="LblDisk" Margin="6,0,0,0" FontSize="11" Foreground="#6B7280" Width="35"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="LblGpuName" Text="GPU" Margin="0,0,6,0" FontSize="11" Foreground="#6B7280"/>
                        <ProgressBar x:Name="PbGpu" Width="60" Height="8" Minimum="0" Maximum="100"/>
                        <TextBlock x:Name="LblGpu" Margin="6,0,0,0" FontSize="11" Foreground="#6B7280" Width="35"/>
                        <TextBlock x:Name="LblGpuMem" Margin="8,0,0,0" FontSize="11" Foreground="#6B7280"/>
                    </StackPanel>
                </StackPanel>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <TextBlock x:Name="LblHealth" Foreground="#6B7280" FontSize="11"/>
            </StatusBarItem>
        </StatusBar>
        
        <!-- Busy overlay covering entire window when operations are running -->
    <Grid x:Name="BusyOverlay" Grid.RowSpan="5" Grid.ColumnSpan="2" Background="#80000000" Visibility="Collapsed" Panel.ZIndex="9999">
            <Border Background="#FFFFFFFF" CornerRadius="8" Padding="16" HorizontalAlignment="Center" VerticalAlignment="Center" BorderBrush="#E5E7EB" BorderThickness="1">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" >
                    <ProgressBar IsIndeterminate="True" Width="120" Height="8" VerticalAlignment="Center"/>
                    <TextBlock x:Name="BusyText" Text=" Working..." Margin="12,0,0,0" FontSize="12" Foreground="#374151"/>
                    <Button x:Name="BtnBusyCancel" Content="Cancel" Margin="16,0,0,0" Padding="12,4" Click="BtnBusyCancel_Click"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
    
</Window>
