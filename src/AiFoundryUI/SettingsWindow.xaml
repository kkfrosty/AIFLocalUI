<Window x:Class="AiFoundryUI.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="320" Width="520" WindowStartupLocation="CenterOwner">
    <Grid Background="White" Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Default Instructions" FontWeight="SemiBold" Margin="0,0,0,6"/>
        <TextBox x:Name="TxtDefaultInstructions" Grid.Row="1" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Save" Padding="16,6" Margin="0,0,8,0" Click="BtnSave_Click"/>
            <Button Content="Cancel" Padding="16,6" Click="BtnCancel_Click"/>
        </StackPanel>
    </Grid>
</Window>
